<h1>New game</h1>
<div class="random-letter">
  <% @letters.each do |letter| %>
  <div class='letter'> <%= letter.capitalize %>
  </div>
  <% end %>
</div>

<p>What is the longest word you can find?</p>
<form action="/score" method = "post" class="form">
  <input type="text" name="score" class="input">
  <input type="submit" value="Play" id="submit-button">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
